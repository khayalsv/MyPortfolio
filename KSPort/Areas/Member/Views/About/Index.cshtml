@using EntityLayer.Concrete
@model List<About>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Title</th>
        <th>Text</th>
        <th>Total Project</th>
        <th>Experience</th>
        <th>Image</th>
        <th>Delete</th>
        <th>Edit</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.Id</th>
            <td>@item.Title</td>
            <td>@item.Text</td>
            <td>@item.TotalProject</td>
            <td>@item.Experience</td>

            <td>
                <img width="200" height="150" src="~/myimg/@item.ImageUrl">
            </td>
            <td><a href="/Member/About/Delete/@item.Id" class="btn btn-danger">Delete</a></td>
            <td><a href="/Member/About/Edit/@item.Id" class="btn btn-warning">Edit</a></td>
        </tr>
    }
</table>

<a href="/Member/About/Create/" class="btn btn-primary">Create new item</a>
