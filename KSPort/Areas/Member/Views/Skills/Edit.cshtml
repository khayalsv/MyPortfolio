@model EntityLayer.Concrete.Skills

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Title</label>
        <input type="text" asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label>Text</label>
        <input type="text" asp-for="Text" class="form-control" />
    </div>

    <div class="form-group">
        <label>Name1</label>
        <input type="text" asp-for="Name1" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ability1</label>
        <input type="number" asp-for="Ability1" class="form-control" />
    </div>

    <div class="form-group">
        <label>Name2</label>
        <input type="text" asp-for="Name2" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ability2</label>
        <input type="number" asp-for="Ability2" class="form-control" />
    </div>

    <div class="form-group">
        <label>Name3</label>
        <input type="text" asp-for="Name3" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ability3</label>
        <input type="number" asp-for="Ability3" class="form-control" />
    </div>

    <div class="form-group">
        <label>Image</label>
        <input type="file" asp-for="Image" class="form-control" />
    </div>

    <div class="form-group">
        <label>Current photo: </label>
        <input type="hidden" asp-for="ImageUrl" class="form-control" />
        <img src="~/myimg/@Model.ImageUrl" width="200" />
    </div>

    <br />

    <button class="btn btn-info">Save</button>
</form>